<p id="notice">
  <%= @post.tittle %>
</p>
<p>
  <%= @post.post %>
</p>

<p>
  <b>Owner:</b>
  <%= @post.owner %>
</p>

<p>
  <b>Date:</b>
  <%= @post.date %>
</p>
</br>

<h3>Comentarios</h3>
<p>
	<% @post.comments.each do |comment| %>
		<p><%= comment.text %></p>
		<p><%= time_ago_in_words comment.created_at %> ago</p>
		<%= link_to 'Delete', [@post,comment], :method => :delete, :confirm => "Esta Usted Seguro de querer Eliminar el Cometario" %>
	<% end %>
</p>
<%= form_for [@post, @post.comments.build] do |f|%>
	<p><%= f.text_area :text, :size => "40x10"%></p>
	<p><%= f.submit "Comentario"%></p>
<%end%>


<%= link_to 'Back', posts_path %>
|
<%= link_to 'Edit', edit_post_path(@post) %>
|
<%= link_to 'Delete', @post, :method => :delete, :confirm => "Esta Usted Seguro de querer Eliminar el Tema" %>