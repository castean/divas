  </div>
    <div class="field">
    <%= f.label :name, "Nombre(s)" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lastname, "Apellido Paterno" %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :slastname, "Apellido Paterno" %><br />
    <%= f.text_field :slastname %>
  </div>
  <div class="field">
    <%= f.label :info, "Resumen" %><br />
    <%= f.text_area :info %>
  </div>
  <div class="field">
    <%= f.label :phone, "Telefono" %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :birthday, "Fecha de Nacimiento" %><br />
    <%= f.date_select :birthday, :start_year => 1970, :order => [:day, :month, :year] %>
  </div>
  <div class="field">
    <%= f.label :email, "Correo Electrónico"%><br />
    <%= f.text_field :email %>
  </div>
